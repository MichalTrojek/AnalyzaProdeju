<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="cz.mtr.analyzaprodeju.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/homeToBarcode"
            app:destination="@+id/barcodeFragment"
            app:enterAnim="@anim/enter_from_top"
            app:exitAnim="@anim/exit_to_bottom"
            app:popEnterAnim="@anim/enter_from_bottom"
            app:popExitAnim="@anim/exit_to_top"
            app:popUpTo="@+id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>


    <fragment
        android:id="@+id/barcodeFragment"
        android:name="cz.mtr.analyzaprodeju.fragments.BarcodeFragment"
        android:label="fragment_barcode"
        tools:layout="@layout/fragment_barcode">
        <action
            android:id="@+id/barcodeToHome"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/enter_from_bottom"
            app:exitAnim="@anim/exit_to_top"
            app:popUpTo="@+id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/barcodeToDetail"
            app:destination="@+id/detailFragment"
            app:enterAnim="@anim/enter_from_bottom"
            app:exitAnim="@anim/exit_to_top"
            app:launchSingleTop="false"
            app:popUpTo="@+id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>


    <fragment
        android:id="@+id/detailFragment"
        android:name="cz.mtr.analyzaprodeju.fragments.DetailFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="message"
            android:defaultValue="No Message"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="cz.mtr.analyzaprodeju.fragments.AboutFragment"
        android:label="fragment_abount"
        tools:layout="@layout/fragment_about" />
</navigation>